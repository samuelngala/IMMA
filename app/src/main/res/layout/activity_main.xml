<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#D8D8D8"
    android:weightSum="3"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_log"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:focusable="true">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_round_corner_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:focusableInTouchMode="true"
                    android:src="@drawable/ic_https"
                    android:layout_width="64dp"
                    android:padding="10dp"
                    android:clickable="true"
                    android:background="@drawable/circlebackgroundgreen"
                    android:layout_height="64dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/txt_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_login"
                    android:textColor="#673AB7"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:layout_height="0dp"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_reg"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:focusable="true">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_round_corner_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:focusableInTouchMode="true"
                    android:src="@drawable/ic_account"
                    android:layout_width="64dp"
                    android:padding="10dp"
                    android:clickable="true"
                    android:background="@drawable/circlebackgroundgreen"
                    android:layout_height="64dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/txt_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_registration"
                    android:textColor="#673AB7"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8D8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Enter your email address and search"
        android:fontFamily="sans-serif"
        android:textColor="#4302B5"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_margin="20dp"
        android:id="@+id/b" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="50dp">
        <EditText
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:hint="Enter email address"
            android:layout_margin="15dp"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            android:background="@drawable/background_round_corner_button"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/txt_search_username"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/txt_search_username"
            android:text="Search"
            android:textColor="#4302B5"
            android:fontFamily="sans-serif"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:background="@drawable/background_round_corner_button"
            android:onClick="SearchUsername"
            android:id="@+id/btnSearch_username"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:fontFamily="sans-serif"
            android:layout_below="@+id/btnSearch_username"
            android:textSize="18sp"
            android:textColor="#4302B5"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_margin="20dp"
            android:id="@+id/a" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/a"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/background_round_corner_button"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="16dp"
            android:enabled="false"
            android:paddingRight="16dp"
            android:id="@+id/edtmail"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#4302B5"
            android:layout_below="@+id/edtmail"
            android:layout_marginTop="10dp"
            android:layout_margin="20dp"
            android:id="@+id/c" />

        <EditText
            android:id="@+id/edtpass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/c"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/background_round_corner_button"
            android:enabled="true"
            android:gravity="center"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#000000"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnUpdatePassword"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/edtpass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_round_corner_button"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:onClick="UpdatePassword"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/reset_password1"
            android:textColor="#4302B5"
            android:textSize="18sp" />

    </RelativeLayout>
</RelativeLayout>